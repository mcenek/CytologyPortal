extends layout

block header
    link(rel='stylesheet', type='text/css', href='/stylesheets/portal.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/loading.css')
    script(type='text/javascript', src='/javascripts/chart.min.js')
    script.
        let preferences = !{JSON.stringify(preferences)};
    script(type='text/javascript', src='/javascripts/portal.js')

block content


    div#loading
        div#loader
            div.lds-roller
                div
                div
                div
                div
                div
                div
                div
                div

    div#content()


        table
            tr
                td
                    div.mdc-card#scatter(style="height:450px;")
                        canvas#myChart(style="height: 300px")
                        div#ratio-fields
                            table(style="margin: 0 auto;")
                                tr
                                    td#lower-bound-thumbnail
                                    td
                                        .mdc-text-field#lower-ratio-field
                                            input#lower-ratio.mdc-text-field__input(tabindex=0)
                                            .mdc-line-ripple
                                            label.mdc-floating-label= "Lower Bound"
                                    td
                                        .mdc-text-field#upper-ratio-field
                                            input#upper-ratio.mdc-text-field__input(tabindex=1)
                                            .mdc-line-ripple
                                            label.mdc-floating-label= "Upper Bound"
                                    td#upper-bound-thumbnail
                            button#show-thumbnails.mdc-button.mdc-button--raised= "Show Thumbnails"
                td
                    pre.mdc-card#info(style="height:450px; overflow: scroll;")





        div.mdc-card#thumbnails-card
            table
                tr
                    td
                        button#thumbnails-prev.mdc-button--raised.mdc-icon-button.material-icons= "arrow_back"
                    td#thumbnails
                    td
                        button#thumbnails-next.mdc-button--raised.mdc-icon-button.material-icons= "arrow_forward"
block drawer
    aside.mdc-drawer.mdc-top-app-bar--fixed-adjust.mdc-drawer--modal
        .mdc-drawer__header
            h3.mdc-drawer__title= locale.web_portal
        .mdc-drawer__content
            nav.mdc-list
                a.mdc-list-item.mdc-list-item--activated(href='/portal')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') folder
                    span.mdc-list-item__text= locale.files
                a.mdc-list-item(href='/analyze')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') file_upload
                    span.mdc-list-item__text= locale.upload

